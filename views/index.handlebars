<div class="row">
  <center>
    <!-- Left side (ready to drink) -->
    <div class="col-md-6">
      <h4 class="red_font">Ready for your tasting pleasure</h4>
      <div id="ready_to_drink">

        <!-- Dynamically Insert Wines Here -->
        {{#each wines}}
          {{#unless drank}}
          <form action="wine/drank/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{wine_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success drank-button" type="submit">Drink It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- Right side (Drank) -->
    <div class="col-md-6">
      <h4 class="red_font">Already drank!</h4>
      <div id="already_drank">

        <!-- Dynamically Insert Drank Wines Here -->
        {{#each wines}}
          {{#if this.drank}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.wine_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>